<p id="notice"><%= notice %></p>

<div class="containter">
  <a href="/">
    <h1 class="text-center alert wrap alert-info">Posts</h1>
  </a>

  <hr>

  <%= link_to '<button class="btn btn-success" type="button">New Post</button>'.html_safe, new_post_path %>

  <hr>

<table class="table table-striped">

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td width="150">
          <div class="post-author"><strong><%= post.user.email %></strong></div>
          <br>
          <div class="author-avatar", style="vertical-align:middle; text-align:center"><%= image_tag post.user.avatar.url, :width => 50, :height => 50 %></div>
        </td>
        <td>
          <h4 class="post-title"><%= post.title %></h4>
          <hr>
          <p class="post-body"><%= post.body %></p>
        </td>
        <td width="100">
          <% if can? :update, post %>
          <div>
            <%= link_to '<button class="btn btn-primary" type="button">Edit</button>'.html_safe, edit_post_path(post) %>
          </div>
          <% end %>
          <br>
          <% if can? :destroy, post %>
          <div>
            <%= link_to '<button class="btn btn-danger" type="button">Delete</button>'.html_safe, post, method: :delete %>
          </div>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
</div>
